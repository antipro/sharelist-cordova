<?xml version='1.0' encoding='utf-8'?>
<widget id="cn.gicp.antipro.sharelist" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Sharelist</name>
    <description>
        A todo list application with share function accross telephone number.
    </description>
    <author email="antipro@163.com" href="#">
        antipro
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="android-minSdkVersion" value="19" />
        <icon density="ldpi" src="res/icon/android/icon-36-ldpi.png" />
        <icon density="mdpi" src="res/icon/android/icon-48-mdpi.png" />
        <icon density="hdpi" src="res/icon/android/icon-72-hdpi.png" />
        <icon density="xhdpi" src="res/icon/android/icon-96-xhdpi.png" />
        <resource-file src="res/icon/android/icon-36-ldpi.png" target="res/drawable-ldpi/icon.png" />
        <resource-file src="res/icon/android/icon-48-mdpi.png" target="res/drawable-mdpi/icon.png" />
        <resource-file src="res/icon/android/icon-72-hdpi.png" target="res/drawable-hdpi/icon.png" />
        <resource-file src="res/icon/android/icon-96-xhdpi.png" target="res/drawable-xhdpi/icon.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-local-notification" spec="^0.8.4" />
    <plugin name="cordova-plugin-network-information" spec="^1.3.4" />
    <plugin name="cordova-plugin-backbutton" spec="^0.3.0" />
    <engine name="android" spec="^6.4.0" />
</widget>
